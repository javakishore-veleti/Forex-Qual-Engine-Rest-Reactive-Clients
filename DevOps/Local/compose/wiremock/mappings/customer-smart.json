{
  "priority": 20,
  "request": {
    "method": "GET",
    "urlPattern": "/api/customer/([A-Za-z0-9\\-]+)"
  },
  "response": {
    "status": 200,
    "body": "{\n  \"customerId\": \"{{request.pathSegments.[2]}}\",\n  \"customerName\": \"Customer {{request.pathSegments.[2]}}\",\n  \"customerEmail\": \"{{request.pathSegments.[2]}}@example.com\",\n  \"customerStatus\": \"ACTIVE\"\n}",
    "headers": {
      "Content-Type": "application/json"
    },
    "transformers": ["response-template"]
  }
}
