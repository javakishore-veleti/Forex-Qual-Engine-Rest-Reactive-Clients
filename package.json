{
  "name": "fx-qual-engine-devops",
  "version": "1.0.0",
  "private": true,
  "description": "Local Docker orchestration for Forex-Qual-Engine-Rest-Reactive-Clients",
  "scripts": {

    "local-docker:up": "sh ./DevOps/Local/compose/docker-up.sh",
    "local-docker:down": "sh ./DevOps/Local/compose/docker-down.sh",
    "local-docker:status": "sh ./DevOps/Local/compose/docker-status.sh",

    "local-docker:network:create": "sh ./DevOps/Local/compose/docker-network.sh create",
    "local-docker:network:delete": "sh ./DevOps/Local/compose/docker-network.sh delete",

    "local-docker:volumes:create": "sh ./DevOps/Local/compose/docker-volumes.sh create",
    "local-docker:volumes:delete": "sh ./DevOps/Local/compose/docker-volumes.sh delete",
    "local-docker:volumes:prune":  "sh ./DevOps/Local/compose/docker-volumes.sh prune",

    "local-docker:kafka:logs": "docker logs -f local-kafka",
    "local-docker:postgres:logs": "docker logs -f local-postgres",
    "local-docker:wiremock:logs": "docker logs -f local-wiremock",

    "local-app:run": "mvn spring-boot:run -Dspring-boot.run.profiles=local",
    "local-app:build": "mvn clean package -DskipTests",
    "local-app:test": "mvn test",

    "local-docker:build": "mvn spring-boot:build-image",
    "local-docker:run": "docker run -p 8080:8080 fx-qual-engine",

    "local-postman:prometheus-collection": "open ./Testing/Postman/Prometheus_FXQualEngine.postman_collection.json || xdg-open ./Testing/Postman/Prometheus_FXQualEngine.postman_collection.json || start ./source_repo/Testing/Postman/Prometheus_FXQualEngine.postman_collection.json",
    "local-notebook:fxqual-analytics": "jupyter notebook ./Testing/Jupyter/FXQualEngine_Analytics_Notebook.ipynb",

    "help": "echo \"Commands: local-docker:up | local-docker:down | local-docker:status | local-docker:kafka:logs\""
  }
}
